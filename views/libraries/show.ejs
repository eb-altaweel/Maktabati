<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/StyleSheet/Style.css">
  <title><%= library.name %></title>
</head>
<body>
  <div class="page-container">
    <h1 class="page-title"><%= library.name %></h1>

    <div class="library-details-card">
      <img class="library-image" src="/uploads/<%= library.image %>" alt="Library Image" />

      <div class="library-info">
        <p><strong>Location:</strong> <%= library.location %></p>
        <p><strong>Address:</strong> <%= library.address %></p>
        <p><strong>Description:</strong> <%= library.description %></p>
        <p><strong>Seating:</strong> <%= library.hasSeating ? "Yes" : "No" %></p>
        <p><strong>Study Room Available:</strong> <%= library.hasStudyRoom ? "Yes" : "No" %></p>
        <p><strong>Operating Hours:</strong> <%= library.openTime %> - <%= library.closeTime %></p>
        <p><strong>Owner:</strong> <%= library.userId.username %></p>
        <p><strong>Favourited by:</strong> <%= library.favouritedByUser.length %> users</p>
      </div>
    </div>

    <% if (user && user._id.toString() === library.userId._id.toString()) { %>
      <div class="owner-actions">
        <a class="button edit-btn" href="/libraries/<%= library._id %>/edit">Edit this library</a>
        <form action="/libraries/<%= library._id %>?_method=DELETE" method="POST">
          <button class="button delete-btn" type="submit">Delete</button>
        </form>
      </div>
    <% } %>

    <% if (user) { %>
      <div class="favourite-section">
        <% if (userHasFavourited) { %>
          <p>You have favourited this library!</p>
          <form action="/libraries/<%= library._id %>/favourited-by/<%= user._id %>?_method=DELETE" method="POST">
            <button class="button unfavourite-btn" type="submit">Unfavourite it!</button>
          </form>
        <% } else { %>
          <form action="/libraries/<%= library._id %>/favourited-by/<%= user._id %>" method="POST">
            <button class="button favourite-btn" type="submit">Favourite it!</button>
          </form>
        <% } %>
      </div>
    <% } %>

    <div class="comments-section">
      <form class="comment-form" action="/libraries/comments" method="POST">
        <input type="hidden" name="libraryId" value="<%= library._id %>" />
        <label for="comment">Leave a comment:</label>
        <textarea name="comment" id="comment" required></textarea>
        <button class="button" type="submit">Add</button>
      </form>

      <h2>Comments:</h2>
      <ul class="comments-list">
        <% if (comments.length === 0) { %>
          <li>No comments yet.</li>
        <% } else { %>
          <% comments.forEach(comment => { %>
            <li><strong><%= comment.userId.username %>:</strong> <%= comment.content %></li>
          <% }) %>
        <% } %>
      </ul>
    </div>

    <div class="back-link">
      <a class="button back-btn" href="/libraries">‚Üê Back to All Libraries</a>
    </div>
  </div>
</body>
</html>
