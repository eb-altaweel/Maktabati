<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/StyleSheet/Style.css" />
  <title>My Libraries</title>
</head>
<body>
  <div class="page-container">
    <h1 class="page-title">My Libraries</h1>

    <!-- Back Link (Optional if you're on a subpage) -->
    <div class="top-actions">
      <a href="/libraries" class="button back-btn">‚Üê Back to All Libraries</a>
      <a href="/libraries/new" class="button add-library">+ Add New Library</a>
    </div>

    <!-- Library Cards -->
    <div class="library-grid">
      <% libraries.forEach(library => { %>
        <div class="library-card">
          <a href="/libraries/<%= library._id %>">
            <h2><%= library.name %></h2>
            <% if (library.image) { %>
              <img src="/uploads/<%= library.image %>" alt="<%= library.name %> image" />
            <% } else { %>
              <div class="placeholder-img">No Image</div>
            <% } %>
          </a>

          <div class="library-actions">
            <a href="/libraries/<%= library._id %>/edit" class="button edit-btn">Edit</a>
            <form action="/libraries/<%= library._id %>?_method=DELETE" method="POST">
              <button type="submit" class="button delete-btn">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
