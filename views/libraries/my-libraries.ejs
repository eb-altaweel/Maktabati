<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Libraries</title>
</head>
<body>
  <h1>My Libraries</h1>
  <a href="/libraries/new">Add New Library</a>

  <ul>
    <% libraries.forEach(library => { %>
      <li>
        <h2><a href="/libraries/<%= library._id %>"><%= library.name %></a></h2>
        <% if (library.image) { %>
          <img src="/uploads/<%= library.image %>" alt="<%= library.name %> image" width="150" />
        <% } %>
        <a href="/libraries/<%= library._id %>/edit">Edit</a>
        <form action="/libraries/<%= library._id %>?_method=DELETE" method="POST" style="display: inline">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
